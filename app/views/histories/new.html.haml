.row
  .col-md-8.col-md-offset-2
    %h2
      %span= @event.start_at.strftime('%d.%m.%Y') + ' -  Visit ' + @event.animal_name + ' with ' + @event.owner_name
    %br
    .col-md-6
      %h3
        %u Patients informations
      %h4
        %span Animal name:
        = @animal_info.name
      %h4
        %span Animal type:
        = @animal_info.animal_type.capitalize
      %h4
        %span Animal breed:
        = @animal_info.breed.capitalize
      %p
        %span Sex:
        - if @animal_info.sex?
          Male
        - elsif @animal_info.sex.nil?
          Don't know
        - else
          Female
      %p
        %span Castration:
        - if @animal_info.castration == 0
          No
        - elsif @animal_info.castration == 1
          Yes
        - else
          Don't know
      %p
        %span Birth date:
        = @animal_info.birth_date.strftime("%d %B %Y")
    .col-md-6
      %h3
        %u Owner informations
      %h4
        %span Full name:
        = @owner_info.full_name
      %h4
        %span Phone number:
        = @owner_address.phone_number
      %p
        %span E-mail:
        = @owner_info.email
      %p
        %span Address:
        = @owner_address.street_address
        %br
        .zip_indent
          = @owner_address.zip_city
      %br
      %br

    .form-group
      = simple_form_for([@event, @event.histories.build]) do |f|
        = f.input :description, label: 'Visit description', as: :text, autofocus: true, input_html: { rows: 5 }
        = f.input :surgery, as: :text, input_html: { rows: 5 }
        = f.input :recipe, as: :text, input_html: { rows: 5 }
        = f.button :submit, class: "btn btn-default"
