.row.remider
  %ol
    - if current_user.role == 'doctor'
      %h2 Your today's patients!
      .index-wrapper
        - @events.each do |event|
          .col-md-2
          -# SPOT FOR COMPLETE ACTION
            <p><%= link_to complete_event_path(event), method: :patch do %></p>
              <i class="fa fa-check fa-lg"></i>
            <% end %>
          .col-md-2
            %p
              = link_to event_path(event), method: :delete, data: { confirm: "Are you sure?" } do
                %i.fa.fa-trash.fa-lg
          .col-md-8
            %li
              %h4.event-title
                %span Visit Title:
                = event.title
                %span || Visit start at:
                = event.start_at.strftime('%H:%M')
              %p.event-desc
                - unless event.event_type.nil?
                  %span Visit type:
                  = event.event_type + ' || '
                %span Owner:
                = event.owner_name + ' || '
                %span Beast type:
                = event.animal_name
    - else
      .index-wrapper
        %h2 Your remiders
        - @events.each do |event|
          .row.event
            .col-md-2
            .col-md-2
              - if Time.now > (event.start_at - 24.hours).to_datetime
                %p
                  %strike.i.fa.fa-trash.fa-lg
              - else
                %p
                  = link_to event_path(event), method: :delete, data: { confirm: "Areu you sure?" } do
                    %i.fa.fa-trash.fa-lg
            .col-md-8
              %li
                %h4.event-title
                  %span Visit Title:
                  = event.title
                  %span || Time to visit:
                  = distance_of_time_in_words(Time.now, event.start_at)
              %p.event-desc
                - unless event.event_type.nil?
                  %span Visit type:
                  = event.event_type + ' || '
                %span Doctor:
                = event.doctor_name + ' || '
                %span Beast:
                = event.animal_name
  .col-md-4
    %h2 My Animals
    - if @animals.empty?
      %h3
        %span Don't by shy...
        = link_to "Add your beast :)", new_animal_path
    - @animals.each do |animal|
      %h3
        %span Animal name:
        = link_to animal.name, animal
      %p
        %span Animal type:
        = animal.animal_type.capitalize.tr('_', ' ') + " || "
        %span Animal breed:
        = animal.breed
  .col-md-8.cal
    .calendar
