.row
  .col-md-4
    %h1 My Animals
    - @animals.each do |animal|
      %h3
        %span Animal name:
        = link_to animal.name, animal
      %p
        %span Animal type:
        = animal.animal_type.capitalize.tr('_', ' ') + " | "
        %span Animal breed:
        = animal.breed
  .col-md-8
    .calendar
